<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <title><%= board.boardName %> - Pinterest Clone</title>
  <link rel="stylesheet" href="/stylesheets/board-view.css" />
</head>
<body>
  <div class="board-container">
    <h1><%= board.boardName %></h1>
    <p class="board-description"><%= board.description || 'No description available.' %></p>

    <div class="masonry-board">
        <% if (board.posts.length > 0) { %>
          <% board.posts.forEach(post => { %>
            <a href="/images/uploads/<%= post.image %>" class="pin-card">
              <img src="/images/uploads/<%= post.image %>" alt="Post Image" />
              <p class="caption"><%= post.postText %></p>

              <form method="POST" action="/unsave/<%= post._id %>" class="unsave-form">
                <input type="hidden" name="boardId" value="<%= board._id %>">
                <button type="submit" class="unsave-btn">Unsave</button>
              </form>
            </a>
          <% }) %>
        <% } else { %>
          <p class="no-posts">No posts saved to this board yet.</p>
        <% } %>
    </div>

    <a href="/profile" class="back-btn">‚Üê Back to Profile</a>
  </div>
</body>
</html>
